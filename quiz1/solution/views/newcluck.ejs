<%- include('./partials/header') %>
<%if(username){%>
<h1>Add a new Todo item</h1>
<form action="/clucks" method="post">
    <div class="border border-secondary rounded m-4 p-4">
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" id="content" name="content" rows="3" placeholder="Watchoo cluckin' 'bout?" required></textarea>
          </div>
        <div class="form-group mt-4">
            <label for="image_url">Image Url</label>
            <input type="url" class="form-control" name="image_url" id="image_url" placeholder="e.g.https://www.example.com/some.png">
        </div>
      <button type="submit" class="btn btn-secondary float-right">Cluck!</button>
    <br/>
    </div>
</form>
<%}else{%>
    <h4 class="text-center">Please sign in to create clucks</h4>
<%}%>

<%- include('../partials/header') %>
<h1>Edit Todo</h1>
    <form action="/clucks/<%= todo.id%>" method="POST">
            <!-- rename(override) this POST request to a PATCH request  -->
            <input type="hidden" name="_method" value="PATCH"> 
        <div class="border border-secondary rounded m-4 p-4">
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" name="content" rows="3" placeholder="Watchoo cluckin' 'bout?" required><%= todo.content %></textarea>
            </div>
            <div class="form-group mt-4">
                <label for="image_url">Image Url</label>
                <input type="url" class="form-control" name="image_url" id="image_url" placeholder="e.g.https://www.example.com/some.png" value="<%= todo.imageUrl %>">
            </div>
        <button type="submit" class="btn btn-secondary float-right">Edit</button>
        <br/>
        </div>
    </form>  
<%- include('../partials/footer') %>